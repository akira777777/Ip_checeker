{
  "version": "1.0",
  "layout": {
    "type": "grid",
    "spacing": {
      "equal": true,
      "value": 12,
      "unit": "px",
      "consistent": true
    },
    "editorGroups": {
      "count": 3,
      "distribution": "equal",
      "sizing": "distribute",
      "locked": true,
      "preventReordering": true,
      "fixedSize": true
    },
    "tabs": {
      "show": true,
      "position": "top",
      "sizing": "fixed",
      "padding": 8,
      "margin": 4,
      "spacing": 6,
      "locked": true,
      "preventClosing": true,
      "preventMoving": true
    },
    "panels": {
      "terminal": {
        "position": "bottom",
        "size": 0.3,
        "locked": true,
        "preventResize": true
      },
      "problems": {
        "position": "bottom",
        "size": 0.1,
        "locked": true,
        "preventResize": true
      }
    },
    "window": {
      "restoreLayout": true,
      "preventManualResize": true,
      "fixedDimensions": true,
      "borderSpacing": 12
    }
  },
  "persistence": {
    "saveOnExit": true,
    "restoreOnStartup": true,
    "enforceLayout": true,
    "preventUserChanges": true
  },
  "appearance": {
    "theme": "dark",
    "fontFamily": "Consolas, 'Courier New', monospace",
    "fontSize": 14,
    "lineHeight": 1.4
  }
}