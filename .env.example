# IP Checker Pro - Environment Configuration

# Flask Settings
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
SECRET_KEY=replace-with-a-secure-random-string

# Security Settings
LOCAL_ONLY=true
FORCE_HTTPS=false

# Rate Limiting
# Storage: memory://, redis://user:password@host:port, or file:///path/to/db
RATE_LIMIT_STORAGE=memory://
RATE_LIMIT_DEFAULT=200 per day,50 per hour

# Cache Settings
CACHE_TYPE=disk
CACHE_DIR=./cache
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Geolocation Settings
GEO_CACHE_TTL=3600
GEO_LOOKUP_LIMIT=50
GEO_TIMEOUT=5
GEO_MAX_RETRIES=3
GEO_BACKOFF_FACTOR=1.0

# API Endpoints
GEO_API_URL=https://ip-api.com/json/{ip}?fields=status,message,continent,country,countryCode,regionName,city,zip,lat,lon,timezone,isp,org,as,query

# Performance
CONNECTION_POOL_SIZE=10
CONNECTION_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Feature Flags
ENABLE_METRICS=true
ENABLE_SWAGGER=false
