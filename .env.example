# IP Checker Pro - Environment Configuration
# Copy this file to .env and fill in your values

# Security Settings (REQUIRED)
SECRET_KEY=your-super-secret-key-here-change-in-production

# Flask Settings
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Security Mode
# Set to False to allow external access (NOT RECOMMENDED without authentication)
LOCAL_ONLY=True

# HTTPS Settings (for production)
FORCE_HTTPS=False

# Geolocation Settings
GEO_CACHE_TTL=3600
GEO_LOOKUP_LIMIT=15

# Rate Limiting
# Format: "number per timeperiod"
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# Logging
LOG_LEVEL=INFO
