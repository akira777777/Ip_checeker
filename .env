# IP Checker Pro - Production Environment Configuration
# =====================================================

# Flask Settings
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-super-secret-key-here-change-in-production

# Security Settings
LOCAL_ONLY=false
FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_STORAGE=redis://redis:6379/0
RATE_LIMIT_DEFAULT=500 per day,200 per hour,50 per minute

# Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1
CACHE_TTL=3600
CACHE_MAX_SIZE=50000

# Geolocation Settings
GEO_CACHE_TTL=7200
GEO_LOOKUP_LIMIT=100
GEO_TIMEOUT=10
GEO_MAX_RETRIES=3
GEO_BACKOFF_FACTOR=1.5

# Connection Pool Settings
CONNECTION_POOL_SIZE=100
CONNECTION_MAXSIZE=200
CONNECTION_TIMEOUT=30
CONNECTION_MAX_RETRIES=3

# Database Settings (if using PostgreSQL)
DATABASE_URL=postgresql://user:password@db:5432/ipchecker
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Endpoints
GEO_API_URL=https://ip-api.com/json/{ip}?fields=status,message,country,countryCode,regionName,city,zip,lat,lon,timezone,isp,org,as,proxy,hosting,query
BACKUP_GEO_API=https://ipapi.co/{ip}/json/

# Performance Settings
MAX_WORKERS=32
MAX_BULK_LOOKUPS=200
MAX_CONNECTIONS_SCAN=500
REQUEST_TIMEOUT=(5, 30)

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s
LOG_FILE=/var/log/ipchecker/app.log
LOG_MAX_BYTES=50*1024*1024
LOG_BACKUP_COUNT=10

# Feature Flags
ENABLE_METRICS=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=false

# Gunicorn Settings
WEB_CONCURRENCY=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
KEEPALIVE=5
GRACEFUL_TIMEOUT=30
TIMEOUT=30

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# CDN Settings
CDN_ENABLED=true
CDN_CACHE_CONTROL=max-age=31536000
CDN_STATIC_FILES=true